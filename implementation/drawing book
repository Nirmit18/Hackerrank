#include <bits/stdc++.h>

using namespace std;
int main(){
    int p,n;
    cin>>n;
    cin>>p;
    
    int i,k=1,c;
    if(p<=n/2){
    if(p==1){
        cout<<0;
    }
    else if(p==2||p==3){
        cout<<1;
    }
    else{
        for(i=4;i<=n/2;i++)
        {
            if(i%2==0){
                k++;
            }
            if(i==p)
            {
              cout<<k;  
            }
        }
    }
    }
    else{
        
            cout<<n/2-p/2;
        }
    
    return 0;
}
    


