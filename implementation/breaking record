#include <bits/stdc++.h>

using namespace std;

int main(){
int n;
cin >> n;
vector<int> a(n);
for(int i = 0; i < n; i++){
cin >> a[i];
}

int max = a[0];
int min = a[0];

int p=0;
int c=0;
for(int i=1;i<n;++i)
      {
        if(a[i]>max)
          {
            p++;
            max=a[i];
          }
          if(a[i]<min) 
          {
           c++;
           min=a[i];
          }
     }

cout << p << " "<<c;
return 0;
}
